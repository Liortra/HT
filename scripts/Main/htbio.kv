<CameraScreen>:
    GridLayout:
        rows: 5
        spacing: 20
        padding: 20
        Image:
            id: imageCamera
            source: 'logo.jpg'
        Button:
            id: buttonStart
            text: 'Start'
            on_press: root.start_streaming(buttonStart, buttonHeat, buttonExit)
            height: 50
            size_hint_y: None
            disabled: False
        Button:
            id: buttonHeat
            text: 'Heat'
            on_press: root.on_off_heat(buttonStart, buttonHeat)
            height: 50
            size_hint_y: None
            disabled: False
        Button:
            id: buttonExit
            text: "Exit"
            size_hint_y: None
            width: 150
            height: 50
            disabled: False
            on_release:
                root.close_camera()
